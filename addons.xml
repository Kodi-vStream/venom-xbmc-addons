<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.vstream" name="vStream" version="0.5.8" provider-name="Venom,TmpName,Johngf">
    <requires>
        <import addon="xbmc.python" version="2.24.0"/>
        <import addon="script.common.plugin.cache" version="0.9.1"/>
        <import addon="plugin.video.youtube" version="2.9.2"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
        <import addon="script.module.urlresolver" optional="true"/>
        <import addon="repository.vstream" version="0.0.3"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="fr">vStream</summary>
        <description lang="fr">vStream est un module de streaming français, trouvez tous vos films, séries et mangas.[CR][CR]Contributeur: Razorex, Kodigoal, Chataigne73, Arias800</description>
        <summary lang="en">vStream</summary>
        <description lang="en">vStream module and a french streaming, find all your movies, TV shows and mangas.[CR][CR]Contributeur: Razorex, Kodigoal, Chataigne73, Arias800</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="repository.vstream"
        name="vStream Repository"
        version="0.0.3"
        provider-name="Venom">
    <extension point="xbmc.addon.repository" name="vStream XBMC Addon Repository">
        <checksum>https://raw.githubusercontent.com/Kodi-vStream/venom-xbmc-addons/master/addons.xml.md5</checksum>
        <info compressed="false">https://raw.githubusercontent.com/Kodi-vStream/venom-xbmc-addons/master/addons.xml</info>
        <datadir zip="true">https://github.com/Kodi-vStream/venom-xbmc-addons/raw/master/repo</datadir>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="fr">vStream Repository</summary>
        <description lang="fr">Installer vStream</description>
        <summary lang="en">vStream Repository</summary>
        <description lang="en">Download and install vStream</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>
