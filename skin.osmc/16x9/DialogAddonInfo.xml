<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- addoninformation -->
	<defaultcontrol always="true">9000</defaultcontrol>

	<controls>
		<!-- Background -->
		<include>WindowFadeBackgroundImage</include>

		<control type="group">

			<!-- Animation -->
			<include>DialogZoomAnimation</include>

			<!-- Heading -->
			<include content="Time">
				<param name="heading">$INFO[ListItem.AddonName]</param>
			</include>

			<!-- Image -->
			<control type="group">
				<control type="image">
					<left>150</left>
					<top>322</top>
					<width>405</width>
					<height>405</height>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio aligny="center">keep</aspectratio>
				</control>
			</control>

			<!-- Info -->
			<control type="group">
				<left>600</left>
				<top>235</top>

				<!-- Details -->
				<control type="grouplist">
					<width>1170</width>
					<height>336</height>
					<itemgap>12</itemgap>
					<orientation>vertical</orientation>
					<usecontrolcoords>true</usecontrolcoords>

					<!-- Type -->
					<control type="group">
						<height>36</height>
						<width>1170</width>
						<visible>!String.IsEmpty(ListItem.AddonType)</visible>
						<control type="label">
							<width>200</width>
							<height>36</height>
							<align>right</align>
							<font>Font36</font>
							<label>467</label>
							<textcolor>DialogColor2</textcolor>
						</control>
						<control type="label">
							<left>220</left>
							<width>950</width>
							<height>36</height>
							<font>Font36</font>
							<label fallback="416">$INFO[ListItem.AddonType]</label>
							<textcolor>DialogColor1</textcolor>
						</control>
					</control>

					<!-- Author -->
					<control type="group">
						<height>36</height>
						<width>1170</width>
						<visible>!String.IsEmpty(ListItem.AddonCreator)</visible>
						<control type="label">
							<width>200</width>
							<height>36</height>
							<align>right</align>
							<font>Font36</font>
							<label>21863</label>
							<textcolor>DialogColor2</textcolor>
						</control>
						<control type="label">
							<left>220</left>
							<width>950</width>
							<height>36</height>
							<font>Font36</font>
							<label fallback="416">$INFO[ListItem.AddonCreator]</label>
							<textcolor>DialogColor1</textcolor>
						</control>
					</control>

					<!-- Version -->
					<control type="group">
						<height>36</height>
						<width>1170</width>
						<visible>!String.IsEmpty(ListItem.AddonVersion)</visible>
						<control type="label">
							<width>200</width>
							<height>36</height>
							<align>right</align>
							<font>Font36</font>
							<label>19114</label>
							<textcolor>DialogColor2</textcolor>
						</control>
						<control type="label">
							<left>220</left>
							<width>950</width>
							<height>36</height>
							<font>Font36</font>
							<label fallback="416">$INFO[ListItem.AddonVersion]</label>
							<textcolor>DialogColor1</textcolor>
						</control>
					</control>

					<!-- Summary -->
					<control type="group">
						<height>112</height>
						<width>1170</width>
						<visible>!String.IsEmpty(ListItem.AddonSummary)</visible>
						<control type="label">
							<width>200</width>
							<height>36</height>
							<align>right</align>
							<font>Font36</font>
							<label>20037</label>
							<textcolor>DialogColor2</textcolor>
						</control>
						<control type="label">
						<top>-6</top>
							<left>220</left>
							<width>950</width>
							<height>112</height>
							<font>Font36</font>
							<aligny>top</aligny>
							<wrapmultiline>true</wrapmultiline>
							<label fallback="416">$INFO[ListItem.AddonSummary]</label>
							<textcolor>DialogColor1</textcolor>
						</control>
					</control>

				</control>

				<!-- Description -->
				<control type="textbox">
					<top>230</top>
					<width>1170</width>
					<height>360</height>
					<textcolor>DialogColor2</textcolor>
					<label>$VAR[addonInformation]</label>
				</control>

			</control>

			<!-- Button grouplist background -->
			<include content="dialogButtonBackground">
				<param name="id">9000</param>
			</include>

			<!-- Buttons -->
			<control type="grouplist" id="9000">
				<left>120</left>
				<bottom>100</bottom>
				<width>1680</width>
				<height>66</height>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>30</itemgap>
				<onup>50</onup>

				<!-- Launch Addon Button -->
				<control type="button" id="12">
					<width>Auto</width>
					<label>518</label>
					<visible>Control.IsEnabled(12)</visible>
				</control>
				<!-- Configure Addon Button -->
					<control type="button" id="9">
					<width>Auto</width>
					<label>24020</label>
					<visible>Control.IsEnabled(9)</visible>
				</control>
				<!-- Update Addon Button -->
					<control type="button" id="8">
					<width>Auto</width>
					<label>24069</label>
					<visible>Control.IsEnabled(8)</visible>
				</control>
				<!-- Install/UnInstall Addon button -->
				<control type="button" id="6">
					<width>Auto</width>
					<label>24022</label>
					<visible>Control.IsEnabled(6)</visible>
				</control>
				<!-- Enable/Disable Addon button -->
				<control type="button" id="7">
					<width>Auto</width>
					<label>24021</label>
					<visible>Control.IsEnabled(7)</visible>
				</control>
				<!-- Auto-update Button -->
				<control type="radiobutton" id="13">
					<width>250</width>
					<label>24048</label>
					<visible>Control.IsEnabled(13)</visible>
				</control>

			</control>

		</control>

	</controls>

</window>