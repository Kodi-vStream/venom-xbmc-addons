<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musicosd -->
	<defaultcontrol always="true">4</defaultcontrol>

	<controls>

		<control type="group">
			<left>150</left>
			<top>945</top>
			<width>1620</width>
			<height>60</height>
			<animation type="WindowOpen" condition="!Window.IsActive(seekbar)">
				<effect type="zoom" start="90" end="100" center="auto" tween="back" easing="out" time="200"/>
				<effect type="fade" start="0" end="100" time="200"/>
			</animation>
			<animation type="WindowClose" condition="!Window.IsActive(seekbar)">
				<effect type="zoom" start="100" end="90" center="auto" easing="in" time="200"/>
				<effect type="fade" start="100" end="0" time="200"/>
			</animation>

			<!-- Background -->
			<control type="image">
				<width>1620</width>
				<height>60</height>
				<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
			</control>

			<!-- Controls -->
			<control type="grouplist">
				<width>360</width>
				<height>60</height>
				<itemgap>0</itemgap>
				<onleft>15</onleft>
				<onright>10</onright>
				<onup>30</onup>
				<ondown>30</ondown>
				<orientation>horizontal</orientation>

				<!-- Spacer -->
				<control type="image" id="40">
					<left>0</left>
					<top>0</top>
					<width>7</width>
					<height>60</height>
					<texture>transparent.png</texture>
				</control>

				<!-- Skip Back -->
				<control type="button" id="1">
					<width>9</width>
					<height>60</height>
					<onleft>2</onleft>
					<onright>4</onright>
					<texturefocus colordiffuse="DialogColor1">osd/OSDTrickBackwardEnd.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDTrickBackwardEnd.png</texturenofocus>
					<onclick>PlayerControl(Previous)</onclick>
				</control>
				<!-- Rewind -->
				<control type="togglebutton" id="2">
					<width>18</width>
					<height>60</height>
					<onleft>8</onleft>
					<onright>10</onright>
					<texturefocus colordiffuse="DialogColor1">osd/OSDTrickBackward.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDTrickBackward.png</texturenofocus>
					<alttexturefocus colordiffuse="DialogColor1">osd/OSDTrickBackward.png</alttexturefocus>
					<alttexturenofocus colordiffuse="DialogColor1">osd/OSDTrickBackward.png</alttexturenofocus>
					<usealttexture>Control.HasFocus(1)</usealttexture>
					<onclick>PlayerControl(Rewind)</onclick>
				</control>
				<!-- Tempo Down -->
				<control type="togglebutton" id="3">
					<width>18</width>
					<height>60</height>
					<onleft>8</onleft>
					<onright>10</onright>
					<texturefocus colordiffuse="DialogColor1">osd/OSDTrickBackward.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDTrickBackward.png</texturenofocus>
					<alttexturefocus colordiffuse="DialogColor1">osd/OSDTrickBackward.png</alttexturefocus>
					<alttexturenofocus colordiffuse="DialogColor1">osd/OSDTrickBackward.png</alttexturenofocus>
					<usealttexture>Control.HasFocus(1) | Control.HasFocus(2)</usealttexture>
					<onclick>PlayerControl(TempoDown)</onclick>
					<enable>Player.TempoEnabled</enable>
				</control>

				<!-- Spacer -->
				<control type="image" id="41">
					<left>0</left>
					<top>0</top>
					<width>7</width>
					<height>60</height>
					<texture>transparent.png</texture>
				</control>

				<!-- Play/Pause -->
				<control type="togglebutton" id="4">
					<width>60</width>
					<height>60</height>
					<texturefocus colordiffuse="DialogColor1">osd/OSDPauseNF.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDPauseNF.png</texturenofocus>
					<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
					<alttexturefocus colordiffuse="DialogColor1">osd/OSDPlayNF.png</alttexturefocus>
					<alttexturenofocus colordiffuse="DialogColor2">osd/OSDPlayNF.png</alttexturenofocus>
					<onclick>PlayerControl(Play)</onclick>
				</control>
				<!-- Stop -->
				<control type="button" id="5">
					<width>60</width>
					<height>60</height>
					<texturefocus colordiffuse="DialogColor1">osd/OSDStopNF.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDStopNF.png</texturenofocus>
					<onclick>PlayerControl(Stop)</onclick>
				</control>

				<!-- Spacer -->
				<control type="image" id="42">
					<left>0</left>
					<top>0</top>
					<width>7</width>
					<height>60</height>
					<texture>transparent.png</texture>
				</control>

				<!-- Tempo Up -->
				<control type="togglebutton" id="6">
					<width>18</width>
					<height>60</height>
					<onleft>8</onleft>
					<onright>10</onright>
					<texturefocus colordiffuse="DialogColor1">osd/OSDTrickForward.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDTrickForward.png</texturenofocus>
					<alttexturefocus colordiffuse="DialogColor1">osd/OSDTrickForward.png</alttexturefocus>
					<alttexturenofocus colordiffuse="DialogColor1">osd/OSDTrickForward.png</alttexturenofocus>
					<usealttexture>Control.HasFocus(7) | Control.HasFocus(8)</usealttexture>
					<onclick>PlayerControl(TempoUp)</onclick>
					<enable>Player.TempoEnabled</enable>
				</control>
				<!-- Fast Forward -->
				<control type="togglebutton" id="7">
					<width>18</width>
					<height>60</height>
					<onleft>8</onleft>
					<onright>10</onright>
					<texturefocus colordiffuse="DialogColor1">osd/OSDTrickForward.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDTrickForward.png</texturenofocus>
					<alttexturefocus colordiffuse="DialogColor1">osd/OSDTrickForward.png</alttexturefocus>
					<alttexturenofocus colordiffuse="DialogColor1">osd/OSDTrickForward.png</alttexturenofocus>
					<usealttexture>Control.HasFocus(8)</usealttexture>
					<onclick>PlayerControl(Forward)</onclick>
				</control>
				<!-- Next -->
				<control type="button" id="8">
					<width>9</width>
					<height>60</height>
					<onleft>7</onleft>
					<onright>9</onright>
					<texturefocus colordiffuse="DialogColor1">osd/OSDTrickForwardEnd.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDTrickForwardEnd.png</texturenofocus>
					<onclick>PlayerControl(Next)</onclick>
				</control>

			</control>

			<!-- Options -->
			<control type="grouplist" id="30">
				<right>0</right>
				<width>420</width>
				<height>60</height>
				<align>right</align>
				<itemgap>0</itemgap>
				<onleft>8</onleft>
				<onright>1</onright>
				<onup>4</onup>
				<ondown>4</ondown>
				<orientation>horizontal</orientation>

				<!-- Repeat -->
				<control type="button" id="10">
					<width>60</width>
					<height>60</height>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>PlayerControl(Repeat)</onclick>
				</control>
				<!-- Random -->
				<control type="togglebutton" id="11">
					<width>60</width>
					<height>60</height>
					<texturefocus colordiffuse="DialogColor1">osd/OSDRandomOffNF.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDRandomOffNF.png</texturenofocus>
					<alttexturefocus colordiffuse="DialogColor1">osd/OSDRandomOnNF.png</alttexturefocus>
					<alttexturenofocus colordiffuse="DialogColor2">osd/OSDRandomOnNF.png</alttexturenofocus>
					<onclick>PlayerControl(Random)</onclick>
				</control>
				<!-- Lyrics -->
				<control type="button" id="12">
					<width>60</width>
					<height>60</height>
					<texturefocus colordiffuse="DialogColor1">osd/OSDLyricsNF.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDLyricsNF.png</texturenofocus>
					<onclick condition="String.IsEmpty(Skin.String(LyricAddon))">Skin.SetAddon(LyricAddon,xbmc.python.lyrics)</onclick>
					<onclick condition="!String.IsEmpty(Skin.String(LyricAddon))">XBMC.RunScript($INFO[Skin.String(LyricAddon)])</onclick>
				</control>
				<!-- Playlist -->
				<control type="button" id="13">
					<width>60</width>
					<height>60</height>
					<texturefocus colordiffuse="DialogColor1">osd/OSDPlaylistNF.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDPlaylistNF.png</texturenofocus>
					<onclick>ActivateWindow(MusicPlaylist)</onclick>
				</control>
				<!-- Visualisation -->
				<control type="button" id="500">
					<width>60</width>
					<height>60</height>
					<texturefocus colordiffuse="DialogColor1">osd/OSDVizNF.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDVizNF.png</texturenofocus>
				</control>
				<!-- Visualisation settings -->
				<control type="button" id="14">
					<width>60</width>
					<height>60</height>
					<texturefocus colordiffuse="DialogColor1">osd/OSDVizSettingsNF.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDVizSettingsNF.png</texturenofocus>
					<onclick>Addon.Default.OpenSettings(xbmc.player.musicviz)</onclick>
				</control>
				<!-- Visualisation presets list -->
				<control type="button" id="15">
					<width>60</width>
					<height>60</height>
					<texturefocus colordiffuse="DialogColor1">osd/OSDVizPreNF.png</texturefocus>
					<texturenofocus colordiffuse="DialogColor2">osd/OSDVizPreNF.png</texturenofocus>
					<onclick>ActivateWindow(122)</onclick>
				</control>

			</control>

			<!-- Repeat images -->
			<control type="group">
				<right>360</right>
				<width>60</width>
				<height>60</height>

				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture colordiffuse="DialogColor2">osd/OSDRepeatNF.png</texture>
					<visible>!Playlist.IsRepeat + !Playlist.IsRepeatOne</visible>
					<visible>!Control.HasFocus(10)</visible>
				</control>
				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture colordiffuse="DialogColor1">osd/OSDRepeatNF.png</texture>
					<visible>!Playlist.IsRepeat + !Playlist.IsRepeatOne</visible>
					<visible>Control.HasFocus(10)</visible>
				</control>
				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture colordiffuse="DialogColor2">osd/OSDRepeatOneNF.png</texture>
					<visible>Playlist.IsRepeatOne</visible>
					<visible>!Control.HasFocus(10)</visible>
				</control>
				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture colordiffuse="DialogColor1">osd/OSDRepeatOneNF.png</texture>
					<visible>Playlist.IsRepeatOne</visible>
					<visible>Control.HasFocus(10)</visible>
				</control>
				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture colordiffuse="DialogColor2">osd/OSDRepeatAllNF.png</texture>
					<visible>Playlist.IsRepeat</visible>
					<visible>!Control.HasFocus(10)</visible>
				</control>
				<control type="image">
					<width>60</width>
					<height>60</height>
					<texture colordiffuse="DialogColor1">osd/OSDRepeatAllNF.png</texture>
					<visible>Playlist.IsRepeat</visible>
					<visible>Control.HasFocus(10)</visible>
				</control>

			</control>

		</control>

		<!-- Seek slider -->
		<control type="slider">
			<description>Seek Slider</description>
			<left>430</left>
			<top>890</top>
			<width>920</width>
			<height>20</height>
			<texturesliderbar />
			<textureslidernib />
			<textureslidernibfocus />
			<action>seek</action>
		</control>

	</controls>

</window>