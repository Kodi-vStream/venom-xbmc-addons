<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- home -->
	<backgroundcolor>0x00000000</backgroundcolor>
	<defaultcontrol always="true">9000</defaultcontrol>

	<!-- Skin Shortcuts -->
	<onload condition="System.HasAddon(script.skinshortcuts)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu&amp;levels=1&amp;options=noGroups)</onload>

	<!-- Skin Helper Service -->
	<onload>Skin.SetBool(SkinHelper.EnablePVRThumbs)</onload>
	<onload condition="System.HasAddon(script.skin.helper.service) + String.IsEmpty(Skin.String(SkinHelper.RandomFanartDelay))">Skin.SetString(SkinHelper.RandomFanartDelay,10)</onload>

	<controls>

		<!-- Hidden control to load weather conditions -->
		<control type="label">
			<font>-</font>
			<label>$INFO[Weather.Conditions]</label>
		</control>

		<!-- Background -->
		<include content="WindowBackgroundImage">
			<param name="isHomeWindow">True</param>
		</include>

		<!-- Time -->
		<control type="group">
			<include>SlideAnim</include>
			<include content="Time">
				<param name="heading"></param>
			</include>
		</control>

		<!-- Logo -->
		<control type="image">
			<left>120</left>
			<top>105</top>
			<width>50</width>
			<height>50</height>
			<texture>logo.png</texture>
			<include>WindowFadeAnimation</include>
			<include>SlideAnim</include>
		</control>

		<!-- Home layout -->
		<control type="group">
			<include>WindowFadeAnimation</include>
			<include>HomeOSMC</include>
		</control>

		<!-- RSS -->
		<control type="group">
			<include>SlideAnim</include>
			<control type="image">
				<right>0</right>
				<bottom>0</bottom>
				<width>1920</width>
				<height>37</height>
				<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
				<visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
				<include>WindowFadeAnimation</include>
			</control>
			<control type="rss" id="1">
				<left>0</left>
				<bottom>0</bottom>
				<width>1920</width>
				<height>35</height>
				<font>Font30</font>
				<textcolor>TextColor2</textcolor>
				<headlinecolor>TextColor2</headlinecolor>
				<titlecolor>TextColor2</titlecolor>
				<urlset>1</urlset>
				<include>WindowFadeAnimation</include>
			</control>
		</control>

	</controls>

</window>
