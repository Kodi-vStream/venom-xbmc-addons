<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musicplaylisteditor -->
	<backgroundcolor>0x00000000</backgroundcolor>
	<onload>SetFocus(50)</onload>
	<onload>SetFocus(6)</onload>

	<controls>

		<!-- Fake previous window (music library) -->
		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Playlist editor controls -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- Heading -->
			<include content="Time">
				<param name="heading">$LOCALIZE[10503]</param>
			</include>

			<!-- Left group -->
			<control type="group">
				<left>150</left>
				<top>228</top>

				<!-- Heading -->
				<control type="label">
					<width>610</width>
					<height>66</height>
					<textcolor>DialogColor1</textcolor>
					<label>31007</label>
				</control>

				<!-- Seperator -->
				<control type="image">
					<top>66</top>
					<width>610</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="DialogOverlayColorNF">common/ScrollBackgroundHorizontal.png</texture>
				</control>

				<!-- Left list -->
				<control type="list" id="50">
					<top>86</top>
					<width>610</width>
					<height>594</height>
					<onleft>noop</onleft>
					<onright>9000</onright>
					<onup>50</onup>
					<ondown>50</ondown>
					<scrolltime>200</scrolltime>

					<itemlayout height="66" width="610">
						<control type="label">
							<width>610</width>
							<textcolor>DialogColor2</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</itemlayout>

					<focusedlayout height="66" width="610">
						<control type="label">
							<width>610</width>
							<textcolor>DialogColor1</textcolor>
							<label>$INFO[ListItem.Label]</label>
							<animation effect="fade" start="100" end="75" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(50)">Conditional</animation>
						</control>
					</focusedlayout>

				</control>

				<!-- Number label -->
				<control type="grouplist">
					<top>698</top>
					<width>610</width>
					<height>44</height>
					<align>right</align>
					<itemgap>6</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<top>3</top>
						<width>auto</width>
						<height>44</height>
						<align>right</align>
						<font>Font25</font>
						<label>$INFO[Container(50).NumItems]</label>
						<textcolor>DialogColor2</textcolor>
					</control>
					<control type="label">
						<width>auto</width>
						<height>44</height>
						<align>right</align>
						<label>31000</label>
						<font>Font33</font>
						<textcolor>TextColor2</textcolor>
						<visible>!Integer.IsGreater(Container(50).NumItems,1)</visible>
					</control>
					<control type="label">
						<width>auto</width>
						<height>44</height>
						<align>right</align>
						<label>31001</label>
						<font>Font33</font>
						<textcolor>TextColor2</textcolor>
						<visible>Integer.IsGreater(Container(50).NumItems,1)</visible>
					</control>
				</control>

			</control>

			<!-- Middle group -->
			<control type="group">
				<centerleft>50%</centerleft>
				<top>228</top>
				<width>360</width>

				<!-- Heading -->
				<control type="label">
					<width>360</width>
					<height>66</height>
					<align>center</align>
					<textcolor>DialogColor1</textcolor>
					<label>31008</label>
				</control>

				<control type="group">
					<visible>Control.HasFocus(50)</visible>

					<!-- Image -->
					<control type="image">
						<left>30</left>
						<top>80</top>
						<width>300</width>
						<height>300</height>
						<texture fallback="DefaultAddonMusic.png">$INFO[Container(50).ListItem.Icon]</texture>
						<aspectratio aligny="top">scale</aspectratio>
					</control>

					<!-- Details -->
					<control type="textbox">
						<left>20</left>
						<top>390</top>
						<width>320</width>
						<font>Font25</font>
						<textcolor>DialogColor1</textcolor>
						<label>$INFO[Container(50).ListItem.Artist,[COLOR=SelectedColor]$LOCALIZE[557]:[/COLOR] ,[CR]]$INFO[Container(50).ListItem.Album,[COLOR=SelectedColor]$LOCALIZE[558]: [/COLOR]]</label>
					</control>

				</control>

				<control type="group">
					<visible>Control.HasFocus(100)</visible>

					<!-- Image -->
					<control type="image">
						<left>30</left>
						<top>80</top>
						<width>300</width>
						<height>300</height>
						<texture fallback="DefaultAddonMusic.png">$INFO[Container(100).ListItem.Icon]</texture>
						<aspectratio aligny="top">scale</aspectratio>
					</control>

					<!-- Details -->
					<control type="textbox">
						<left>20</left>
						<top>390</top>
						<width>320</width>
						<height>330</height>
						<font>Font25</font>
						<textcolor>DialogColor1</textcolor>
						<label>$INFO[Container(100).ListItem.Artist,[COLOR=SelectedColor]$LOCALIZE[557]:[/COLOR] ,[CR]]$INFO[Container(100).ListItem.Album,[COLOR=SelectedColor]$LOCALIZE[558]: [/COLOR]]</label>
					</control>

				</control>

				<!-- Middle grouplist -->
				<control type="grouplist" id="9000">
					<top>594</top>
					<width>360</width>
					<height>462</height>
					<itemgap>0</itemgap>
					<onleft>50</onleft>
					<onright>100</onright>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<orientation>vertical</orientation>

					<!-- Open Button -->
					<control type="button" id="6">
						<align>center</align>
						<label>31009</label>
						<width>360</width>
					</control>

					<!-- Save Button -->
					<control type="button" id="7">
						<align>center</align>
						<label>31010</label>
						<width>360</width>
					</control>

					<!-- Clear Button -->
					<control type="button" id="8">
						<align>center</align>
						<label>31011</label>
						<width>360</width>
					</control>

				</control>

			</control>

			<!-- Right group -->
			<control type="group">
				<right>150</right>
				<top>228</top>
				<width>610</width>

				<!-- Heading -->
				<control type="label">
					<width>610</width>
					<height>66</height>
					<textcolor>DialogColor1</textcolor>
					<label>31012</label>
				</control>

				<!-- Seperator -->
				<control type="image">
					<top>66</top>
					<width>610</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="DialogOverlayColorNF">common/ScrollBackgroundHorizontal.png</texture>
				</control>

				<!-- Right list -->
				<control type="list" id="100">
					<top>86</top>
					<width>610</width>
					<height>594</height>
					<onleft>9000</onleft>
					<onright>noop</onright>
					<onup>100</onup>
					<ondown>100</ondown>
					<scrolltime>200</scrolltime>

					<itemlayout height="66" width="610">
						<control type="label">
							<width>610</width>
							<textcolor>DialogColor2</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<width>610</width>
							<align>right</align>
							<textcolor>DialogColor2</textcolor>
							<label>$INFO[ListItem.Label2]</label>
						</control>
					</itemlayout>

					<focusedlayout height="66" width="610">
						<control type="group">
							<animation effect="fade" start="100" end="75" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(100)">Conditional</animation>
							<control type="label">
								<width>610</width>
								<textcolor>DialogColor1</textcolor>
								<label>$INFO[ListItem.Label]</label>
							</control>
							<control type="label">
								<width>610</width>
								<align>right</align>
								<textcolor>DialogColor1</textcolor>
								<label>$INFO[ListItem.Label2]</label>
							</control>
						</control>
					</focusedlayout>

				</control>

				<!-- Number label -->
				<control type="grouplist">
					<top>698</top>
					<width>610</width>
					<height>44</height>
					<align>right</align>
					<itemgap>6</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<top>3</top>
						<width>auto</width>
						<height>44</height>
						<align>right</align>
						<font>Font25</font>
						<label>$INFO[Container(100).NumItems]</label>
						<textcolor>DialogColor2</textcolor>
					</control>
					<control type="label">
						<width>auto</width>
						<height>44</height>
						<align>right</align>
						<label>31000</label>
						<font>Font33</font>
						<textcolor>TextColor2</textcolor>
						<visible>!Integer.IsGreater(Container(100).NumItems,1)</visible>
					</control>
					<control type="label">
						<width>auto</width>
						<height>44</height>
						<align>right</align>
						<label>31001</label>
						<font>Font33</font>
						<textcolor>TextColor2</textcolor>
						<visible>Integer.IsGreater(Container(100).NumItems,1)</visible>
					</control>
				</control>

			</control>

		</control>

	</controls>

</window>
