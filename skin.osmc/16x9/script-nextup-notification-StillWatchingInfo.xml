<?xml version="1.0" encoding="UTF-8"?>
<window>
    <animation effect="slide" start="550,0" time="200">WindowOpen</animation>
    <animation effect="slide" end="550,0" time="200">WindowClose</animation>
    <zorder>100</zorder>
    <defaultcontrol>4012</defaultcontrol>
    <!-- infodialog -->
    <controls>
        <control type="group">
            <animation effect="slide" end="0,50" time="200" condition="String.IsEqual(Window(10000).Property(isCaching),True)">Conditional</animation>
            <animation effect="slide" end="0,50" time="200" condition="Window.IsActive(volumebar)">Conditional</animation>
            <animation effect="slide" end="0,20" time="200" condition="Window.IsActive(1100) | Window.IsActive(volumebar)">Conditional</animation>
            <animation effect="slide" end="0,85" time="200" condition="Window.IsActive(notification)">Conditional</animation>
            <animation effect="slide" end="0,85" time="200" condition="Window.IsActive(extendedprogressdialog)">Conditional</animation>
        
            <control type="image">
                <right>0</right>
                <top>90</top>
                <width>550</width>
                <height>105</height>
                <texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
            </control>

            <!-- Still watching question -->
            <control type="label">
                <right>10</right>
                <top>100</top>
                <width>530</width>
                <height>20</height>
                <align>left</align>
                <scroll>true</scroll>
                <font>Font27</font>
                <label>$LOCALIZE[31072]</label>
            </control>

            <!-- Next episode -->
            <control type="label" id="402">
                <right>10</right>
                <top>125</top>
                <width>530</width>
                <height>20</height>
                <align>left</align>
                <aligny>top</aligny>
                <scroll>true</scroll>
                <font>Font27-Light</font>
                <label>($INFO[Control.GetLabel(4008),s,]$INFO[Control.GetLabel(4009),e,]) $INFO[Control.GetLabel(4010)]</label>
            </control>

            <!-- Still watching -->
            <control type="button" id="4012">
                <right>10</right>
                <top>155</top>
                <width>530</width>
                <height>20</height>
                <align>left</align>
                <aligny>top</aligny>
                <font>Font27-Light</font>
                <label>$LOCALIZE[31073]</label>
                <onback>SendClick(4013)</onback>
            </control>

        </control>

        <!-- Stop watching -->
        <control type="button" id="4013">
            <left>-10000</left>
            <top>-10000</top>
            <width>260</width>
            <height>20</height>
            <align>left</align>
            <aligny>top</aligny>
            <font>Font27</font>
            <label>222</label>
        </control>

        <!-- Season -->
        <control type="label" id="4008">
            <left>-10000</left>
            <top>-10000</top>
            <width>1620</width>
            <height>72</height>
            <font>Font72</font>
            <textcolor>DialogColor1</textcolor>
        </control>

        <!-- Episode -->
        <control type="label" id="4009">
            <left>-10000</left>
            <top>-10000</top>
            <width>1620</width>
            <height>72</height>
            <font>Font72</font>
            <textcolor>DialogColor1</textcolor>
        </control>

        <!-- Episode name -->
        <control type="label" id="4010">
            <left>-10000</left>
            <top>-10000</top>
            <width>1620</width>
            <height>72</height>
            <font>Font72</font>
            <textcolor>DialogColor1</textcolor>
        </control>

        <!-- Not displayed by us, but required by the script -->
        <control type="label" id="4000">
            <left>-10000</left>
            <top>-10000</top>
            <width>1620</width>
            <height>72</height>
            <font>Font72</font>
            <textcolor>DialogColor1</textcolor>
        </control>
        <control type="label" id="4003">
            <left>-10000</left>
            <top>-10000</top>
            <width>1620</width>
            <height>72</height>
            <font>Font72</font>
            <textcolor>DialogColor1</textcolor>
        </control>
        <control type="label" id="4004">
            <left>-10000</left>
            <top>-10000</top>
            <width>1620</width>
            <height>72</height>
            <font>Font72</font>
            <textcolor>DialogColor1</textcolor>
        </control>
        <control type="textbox" id="4006">
            <left>-10000</left>
            <top>-10000</top>
            <width>1620</width>
            <height>72</height>
            <font>Font72</font>
            <textcolor>DialogColor1</textcolor>
        </control>

    </controls>

</window>
