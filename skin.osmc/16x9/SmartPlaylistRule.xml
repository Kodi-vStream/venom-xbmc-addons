<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- smartplaylistrule -->
	<defaultcontrol always="true">15</defaultcontrol>

	<controls>
		<!-- Window Background -->
		<include>WindowFadeBackgroundImage</include>

		<control type="group">

			<!-- Animation -->
			<include>DialogZoomAnimation</include>

			<!-- Heading -->
			<include content="Time">
				<param name="heading">21421</param>
			</include>

			<!-- Control group -->
			<control type="group">
				<left>600</left>
				<top>228</top>
				<width>1200</width>

				<!-- Rule match label -->
				<control type="label">
					<width>360</width>
					<height>66</height>
					<label>21422</label>
					<textcolor>$VAR[SelectedColor]</textcolor>
				</control>

				<!-- Rule Field -->
				<control type="button" id="15">
					<top>66</top>
					<width>1200</width>
					<onup>noop</onup>
					<ondown>16</ondown>
					<onright>noop</onright>
					<onleft>noop</onleft>
				</control>

				<!-- Rule Field label -->
				<control type="label">
					<top>66</top>
					<width>1200</width>
					<height>66</height>
					<textcolor>DialogColor1</textcolor>
					<label>$INFO[Control.GetLabel(15)]</label>
					<visible>Control.HasFocus(15)</visible>
				</control>
				<control type="label">
					<top>66</top>
					<width>1200</width>
					<height>66</height>
					<textcolor>DialogColor2</textcolor>
					<label>$INFO[Control.GetLabel(15)]</label>
					<visible>!Control.HasFocus(15)</visible>
				</control>

				<!-- Rule operator -->
				<control type="button" id="16">
					<top>132</top>
					<width>1200</width>
					<onup>15</onup>
					<ondown>17</ondown>
					<onright>noop</onright>
					<onleft>noop</onleft>
				</control>

				<!-- Rule Field label -->
				<control type="label">
					<top>132</top>
					<width>1200</width>
					<height>66</height>
					<textcolor>DialogColor1</textcolor>
					<label>$INFO[Control.GetLabel(16)]</label>
					<visible>Control.HasFocus(16)</visible>
				</control>
				<control type="label">
					<top>132</top>
					<width>1200</width>
					<height>66</height>
					<textcolor>DialogColor2</textcolor>
					<label>$INFO[Control.GetLabel(16)]</label>
					<visible>!Control.HasFocus(16)</visible>
				</control>

				<!-- Value edit -->
				<control type="edit" id="17">
					<left>0</left>
					<top>198</top>
					<width>1200</width>
					<label>-</label>
					<onup>16</onup>
					<ondown>20</ondown>
					<onleft>noop</onleft>
					<onright>noop</onright>
					<texturefocus colordiffuse="TextColor1" border="2">common/Border.png</texturefocus>
					<texturenofocus colordiffuse="TextColor2" border="2">common/Border.png</texturenofocus>
					<align>left</align>
				</control>

				<!-- Browse Button -->
				<control type="button" id="20">
					<top>264</top>
					<width>1200</width>
					<label>1024</label>
					<onup>17</onup>
					<ondown>9001</ondown>
					<onleft>noop</onleft>
					<onright>noop</onright>
				</control>

			</control>

			<!-- Button grouplist background -->
			<include content="dialogButtonBackground">
				<param name="id">9001</param>
			</include>

			<!-- Buttons -->
			<control type="grouplist" id="9001">
				<left>120</left>
				<bottom>100</bottom>
				<width>1680</width>
				<height>66</height>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>30</itemgap>
				<onup>20</onup>

				<!-- OK Button -->
				<control type="button" id="18">
					<width>auto</width>
					<label>186</label>
				</control>

				<!-- Cancel Button -->
				<control type="button" id="19">
					<width>auto</width>
					<label>222</label>
				</control>

			</control>

		</control>

	</controls>

</window>