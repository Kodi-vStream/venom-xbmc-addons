<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videoplaylist -->
	<backgroundcolor>0x00000000</backgroundcolor>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- Views -->
			<include>Viewtype50</include>

			<!-- Scrollbar (list) -->
			<control type="scrollbar" id="60">
				<left>690</left>
				<centertop>50%</centertop>
				<width>20</width>
				<height>720</height>
				<onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
				<onright>50</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>OverlayColorNF</colordiffuse>
				<texturesliderbackground border="9,1,6,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="8,1,6,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="8,1,6,1" colordiffuse="DialogColor1">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars) + Control.IsVisible(50)</visible>
			</control>

			<!-- Item count -->
			<include>ItemCount</include>

		</control>

		<!-- Time -->
		<include>Time</include>

		<!-- Options -->
		<control type="group" id="9002">
			<control type="image">
				<include>FullscreenDimensions</include>
				<texture colordiffuse="DarkenColor">dialogs/DialogTextBackground.png</texture>
				<animation effect="fade" start="0" end="100" time="200">Visible</animation>
				<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
				<visible>ControlGroup(9002).HasFocus</visible>
			</control>
			<control type="group">
				<left>-450</left>
				<top>0</top>
				<animation effect="slide" start="0,0" end="450,0" time="200" condition="ControlGroup(9002).HasFocus">Conditional</animation>
				<control type="button">
					<left>0</left>
					<top>0</top>
					<width>460</width>
					<height>1080</height>
					<onclick>noop</onclick>
				</control>

				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>450</width>
					<height>1080</height>
					<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
				</control>

				<!-- Look controls -->
				<control type="grouplist" id="3001">
					<left>20</left>
					<top>10</top> <!-- -10 because there are two spacers -->
					<width>410</width>
					<height>1040</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>50</onleft>
					<onright>50</onright>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<itemgap>0</itemgap>
					<defaultcontrol always="true">99</defaultcontrol>

					<include content="SideMenuAnimation">
						<param name="containerID">3001</param>
					</include>

					<!-- Sort by -->
					<control type="button" id="3">
						<height>52</height>
						<label>103</label>
						<visible>Control.IsEnabled(3)</visible>
					</control>
					<!-- Sort ascending/descending -->
					<control type="togglebutton" id="4">
						<height>52</height>
						<label>584</label>
						<altlabel>585</altlabel>
						<usealttexture>Container.SortDirection(Descending)</usealttexture>
						<visible>Control.IsEnabled(4)</visible>
					</control>
					<!-- Filter -->
					<control type="edit" id="19">
						<height>52</height>
						<label>587</label>
						<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
					</control>
					<!-- Filter -->
					<control type="radiobutton" id="93">
						<height>52</height>
						<label>587</label>
						<onclick>right</onclick>
						<onclick>Filter</onclick>
						<selected>Container.Filtered</selected>
						<visible>Container.CanFilterAdvanced</visible>
					</control>

					<control type="image" id="80">
						<left>0</left>
						<top>0</top>
						<width>410</width>
						<height>10</height>
						<texture>transparent.png</texture>
					</control>

					<!-- Scrollbars -->
					<control type="radiobutton" id="94">
						<height>52</height>
						<label>31005</label>
						<onclick>Skin.ToggleSetting(Scrollbars)</onclick>
						<selected>!Skin.HasSetting(Scrollbars)</selected>
					</control>

					<control type="image" id="81">
						<left>0</left>
						<top>0</top>
						<width>410</width>
						<height>10</height>
						<texture>transparent.png</texture>
					</control>

					<!-- Shuffle -->
					<control type="radiobutton" id="20">
						<height>52</height>
						<label>191</label>
						<visible>Control.IsEnabled(20)</visible>
					</control>
					<!-- Repeat -->
					<control type="button" id="26">
						<height>52</height>
						<label>-</label>
						<visible>Control.IsEnabled(26)</visible>
					</control>
					<!-- Save -->
					<control type="button" id="21">
						<height>52</height>
						<label>190</label>
						<visible>Control.IsEnabled(21)</visible>
					</control>
					<!-- Clear -->
					<control type="button" id="22">
						<height>52</height>
						<label>192</label>
						<onclick>ReplaceWindow(Videos)</onclick>
						<visible>Control.IsEnabled(22)</visible>
					</control>

				</control>
			</control>
		</control>

		<!-- Options -->
		<control type="group">
			<include>OptionsAnimation</include>
			<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus() | ControlGroup(4000).HasFocus() | ControlGroup(5000).HasFocus()</visible>

			<!-- Background -->
			<include>OptionsBackgroundImage</include>

			<!-- Main group -->
			<control type="group">
				<left>85</left>
				<top>297</top>

				<!-- Scroll -->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>72</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="DialogOverlayColorNF">common/ScrollBackgroundHorizontal.png</texture>
				</control>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>24</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="DialogColor1">common/ScrollbarGripHorizontalFO.png</texture>
					<animation effect="slide" start="0" end="24" time="200" condition="ControlGroup(4000).HasFocus()">Conditional</animation>
					<animation effect="slide" start="0" end="48" time="200" condition="ControlGroup(5000).HasFocus()">Conditional</animation>
				</control>

				<!-- Heading -->
				<control type="label">
					<animation effect="fade" start="0" end="100" time="200">Visible</animation>
					<left>0</left>
					<top>34</top>
					<width>1200</width>
					<height>72</height>
					<label>$VAR[CustomMenuHeading]</label>
					<font>Font72</font>
					<textcolor>DialogColor1</textcolor>
				</control>

				<!-- Look controls -->
				<control type="grouplist" id="3000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>50</onleft>
					<onright>4001</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">3001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="3001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					
				</control>

				<!-- Layout controls -->
				<control type="grouplist" id="4000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
					<onright>5001</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">4001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(4000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="4001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>

				</control>

				<!-- More controls -->
				<control type="grouplist" id="5000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>4001</onleft>
					<onright>50</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">5001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(5000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="5001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>

				</control>

			</control>

		</control>

	</controls>

</window>