<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype55">

		<control type="group">
			<visible>Control.IsVisible(55)</visible>

			<!-- Thumbs -->
			<control type="panel" id="55">
				<left>150</left>
				<top>170</top>
				<width>1620</width>
				<height>666</height>
				<onleft>63</onleft>
				<onright condition="!Skin.HasSetting(KioskMode)">3001</onright>
				<onup>55</onup>
				<ondown>55</ondown>
				<pagecontrol>63</pagecontrol>
				<preloaditems>4</preloaditems>
				<viewtype label="$LOCALIZE[31078]">icon</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<visible>Container.Content(genres)|Container.Content(countries)|Container.Content(tags) | Container.Content(years) | Container.Content() | Container.Content(actors) | Container.Content(directors)|Container.Content(studios)| Container.Content(albums) | Container.Content(addons)</visible>

				<itemlayout width="270" height="222">
					<!-- Image - Albums -->
					<include content="image-55">
						<param name="fallback"/>
						<param name="colordiffuse">DiffusePosterNF</param>
						<param name="visible">Container.Content(albums)</param>
					</include>
					<!-- Image - Addons -->
					<include content="image-55">
						<param name="fallback">DefaultAddon.png</param>
						<param name="colordiffuse">DiffusePosterNF</param>
						<param name="visible">Container.Content(addons)</param>
					</include>

					<!--content vide -->
					<include content="image-55">
						<param name="fallback">DefaultMovie.png</param>
						<param name="colordiffuse">DiffusePosterNF</param>
						<param name="visible">Container.Content(genres)|Container.Content(countries)|Container.Content(tags)|Container.Content(years) | Container.Content() | Container.Content(addons) | Container.Content(actors) | Container.Content(directors)|Container.Content(studios)</param>
					</include>

					<!-- Watched status -->
					<control type="image">
						<left>177</left>
						<top>185</top>
						<width>35</width>
						<height>49</height>
						<texture>$VAR[StatusOverlayWide]</texture>
						<colordiffuse>OverlayColorNF</colordiffuse>
					</control>
				</itemlayout>

				<focusedlayout width="270" height="222">
					<control type="group">
						<include>FocusAnim</include>
					<!-- Image - Albums -->
						<include content="image-55">
							<param name="fallback"/>
							<param name="visible">Container.Content(albums)</param>
						</include>
						<!-- Image - Addons -->
						<include content="image-55">
							<param name="fallback">DefaultAddon.png</param>
							<param name="visible">Container.Content(addons)</param>
						</include>
						<!--content vide -->
						<include content="image-55">
							<param name="fallback">DefaultMovie.png</param>
							<param name="visible">Container.Content(genres)|Container.Content(countries)|Container.Content(tags)|Container.Content(years) | Container.Content() | Container.Content(addons) | Container.Content(actors) | Container.Content(directors)|Container.Content(studios)</param>
						</include>
						<!-- Watched status -->
						<control type="image">
							<left>177</left>
							<top>185</top>
							<width>35</width>
							<height>49</height>
							<texture>$VAR[StatusOverlayWide]</texture>
						</control>
					</control>
				</focusedlayout>
			</control>

			<control type="group">
				<centerleft>50%</centerleft>
				<top>850</top>
				<width>1920</width>
				<height>100</height>

				<!-- Title -->
				<control type="label">
					<left>90</left>
					<top>0</top>
					<width>1740</width>
					<height>72</height>
					<font>Font72</font>
					<align>center</align>
					<textcolor>TextColor1</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="!Control.HasFocus(55)">Conditional</animation>
				</control>

				<!-- Details -->
				<control type="label">
					<left>90</left>
					<top>88</top>
					<width>1740</width>
					<height>27</height>
					<font>Font27</font>
					<align>center</align>
					<label>$VAR[Label2]</label>
					<textcolor>TextColor1</textcolor>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="!Control.HasFocus(55)">Conditional</animation>
				</control>

			</control>

		</control>

	</include>

	<include name="image-55">
		<param name="fallback">DefaultVideos.png</param>
		<param name="colordiffuse">FFFFFFFF</param>
		<param name="visible">False</param>
		<definition>
			<control type="textbox">
				<left>34</left>
				<width>202</width>
				<height>202</height>
				<textcolor>$PARAM[colordiffuse]</textcolor>
				<visible>String.IsEmpty(ListItem.Icon) | String.IsEqual(ListItem.Icon,DefaultAlbumCover.png)</visible>
				<label>[CR][LIGHT]$INFO[ListItem.Artist][/LIGHT][CR]$INFO[ListItem.Label]</label>
				<font>font25</font>
				<align>center</align>
			</control>
			<control type="image">
				<left>34</left>
				<width>202</width>
				<height>202</height>
				<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
				<aspectratio>scale</aspectratio>
				<visible>$PARAM[visible]</visible>
			</control>
			<control type="image">
				<left>34</left>
				<width>202</width>
				<height>202</height>
				<colordiffuse>$PARAM[colordiffuse]</colordiffuse>
				<texture fallback="$PARAM[fallback]" background="true">$VAR[mediaImages]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible>$PARAM[visible] + !String.IsEqual(ListItem.Icon,DefaultAlbumCover.png)</visible>
			</control>
		</definition>
	</include>

</includes>
