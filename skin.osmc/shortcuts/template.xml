								<param name="width">$SKINSHORTCUTS[imageWidth]</param>
								<param name="height">$SKINSHORTCUTS[imageHeight]</param>
								<param name="colordiffuse">DiffusePosterNF</param>
								<param name="fallback">$SKINSHORTCUTS[artFallback]</param>
